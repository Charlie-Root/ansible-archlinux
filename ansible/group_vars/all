user:
    name: aaron
    group: aaron
    shell: /bin/zsh


# processor type:
#   Option: "intel" will install microcode updates and configure the bootloader accordingly
#   Option: "amd" will do the same for amd
# graphics_card type: 
#   Option: "intel" will install microcode updates
#   Option: "nvidia" will install nouveau because i will NEVER EVER touch those filthy nvidia drivers
system:
    locale: de_CH.UTF-8
    timezone: Europe/Zurich
    processor: amd
    # nvidia or intel 
    graphics_card: nvidia

bootloader: syslinux

ssh:
    port: 22
    enable_sshd: true

dotfiles:
    url: https://github.com/id101010/LinuxDotFiles.git
    destination: .dotfiles
    rcup_flags: -fx README.md

base_packages:
    - base-devel
    - cronie
    - openssh
    - rkhunter
    - zsh
    - htop
    - nmap
    - curl
    - tmux
    - git
    - rsync
    - coreutils
    - dateutils
    - bc
    - strace
    - lsof
    - sysstat
    - tig
